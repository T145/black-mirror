{
  "overrides": [
    {
      "extends": ["plugin:jsonc/recommended-with-json"],
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "parserOptions": {
        "jsonSyntax": "JSON"
      }
    },
    {
      "extends": ["plugin:jsonc/recommended-with-jsonc"],
      "files": ["*.jsonc"],
      "parser": "jsonc-eslint-parser",
      "parserOptions": {
        "jsonSyntax": "JSONC"
      }
    },
    {
      "extends": ["plugin:jsonc/recommended-with-json5"],
      "files": ["*.json5"],
      "parser": "jsonc-eslint-parser",
      "parserOptions": {
        "jsonSyntax": "JSON5"
      }
    }
  ],
  "rules": {
    "jsonc/sort-keys": 1
  }
}
