# Registry and authentication
registry=https://registry.npmjs.org/
always-auth=false

# Engine and dependency management
engine-strict=true
save-exact=false
save-dev=false

# pnpm-specific settings
shamefully-hoist=true
strict-peer-dependencies=false

# Script execution
enable-pre-post-scripts=true
ignore-scripts=false

# Security and SSL
strict-ssl=true
audit=true

# Performance and caching
prefer-offline=true
cache-max=604800000

# Output and UX
progress=false
fund=false
package-lock=true

# Timeout settings
timeout=60000
